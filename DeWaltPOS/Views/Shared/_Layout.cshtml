<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="/Images/Dewalt.jpg" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" />
    @Styles.Render("~/Content/css")
    <link href="@Url.Content("~/scripts/jquery-ui-1.10.4.custom/css/AllCustom.css?ver=123")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DewaltSite.css?ver=123")" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="@Url.Content("~/scripts/jquery-ui-1.10.4.custom/css/ui-lightness/jquery-ui-1.10.4.custom.min.css")"  type="text/css" rel="Stylesheet" />
    <script src="@Url.Content("~/scripts/jquery-ui-1.10.4.custom/js/jquery-ui-1.10.4.custom.min.js")" type="text/javascript"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
        <script src="~/Scripts/knockout-2.1.0.js"></script>
    @Scripts.Render("~/bundles/dewalt-js")
</head>
<body>
    <header id="main-header" class="col-sm-12">

        <div class="row">
            <div class="col-sm-3 col-xs-6"><a href="@Url.Action("Index", "Home")" class="header-logo">Dewalt</a></div>
            <div class="col-sm-3 col-sm-offset-6 col-xs-6 col-xs-offset-0">
                <div class="dropdown header-user-info">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </header>
    <div id="body">
        @if (Request.IsAuthenticated)
        {
            @Html.Partial("LeftMenu")
        }

        @RenderSection("featured", required: false)
        <div style="padding-left:30px;padding-right:30px;margin-left:20px">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="content-wrapper">

        </div>
    </footer>

    @RenderSection("scripts", required: false)
    @section scripts {

        <script type="text/javascript" src="~/Scripts/jquery-ui-1.10.4.custom/js/AllCustom.js?ver=123"></script>

    }
</body>

</html>
