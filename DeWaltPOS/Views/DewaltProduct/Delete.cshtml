@model DeWaltPOS.Models.Product

@{
    ViewBag.Title = "Delete";
}
@section scripts {

    <script type="text/javascript" src="~/Scripts/jquery-ui-1.10.4.custom/js/AllCustom.js?ver=123"></script>

}
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Product</legend>
  @{  
      var thmburl = "";
      if(Model.productType == 1)
      {
        var thmb = Model.CatalogueImages.LastOrDefault(i => i.prodid == Model.id);
        if (thmb != null)
        {
            thmburl = thmb.image;
        }          
      }
      else
      {
        var  thmb = Model.ThumbImages.SingleOrDefault(i => i.prodid == Model.id);
        if (thmb != null)
        {
            thmburl = thmb.image;
        }          
      }
 
  }


    <div class="row">
        <div id="form-group-product-name" class="form-group">

            <div class="col-sm-2 control-label"><b>Sku:</b></div>
            <div class="col-sm-4">@Html.DisplayFor(model => model.sku)</div>

        </div>
    </div>
    <br />
    <div class="row">
        <div id="form-group-product-name" class="form-group">

            <div class="col-sm-2 control-label"><b>Description:</b></div>
            <div class="col-sm-4">@Html.DisplayFor(model => model.Description)</div>
        </div>
    </div>

    <hr />
        @*<div class="product-list-thumbnail-wrapper"><a href="@Url.Action("Edit", "DewaltProduct", new {id = item.id })" class="thumbnail product-thumbnail"><img src="@thmburl"></a></div>*@
        <div id="form-group-product-name" class="form-group">

            <div style="display: table;">
                <div class="imgdisplay edit-block" style="background-color:white; width:400px;height:400px; background-image:url('@thmburl');display:table-cell;text-align:centre">
                </div>
            </div>
        </div>

</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
        <div class="row" >

            <div class="col-sm-1 col-sm-offset-1">
                <button type="submit" class="btn btn-primary btn-block" style="width:auto">Delete</button>
            </div>

            @if (ViewBag.type == 1)
            {
                <div class="col-sm-1">
                    <a href="@Url.Action("SuperSkus", "DewaltProduct")" class="btn btn-danger btn-block">Cancel</a>
                </div>
            }

            @if (ViewBag.type == 2)
            {
                <div class="col-sm-2">
                    <a href="@Url.Action("GlobalFixtures", "DewaltProduct")" class="btn btn-danger btn-block">Cancel</a>
                </div>
            }

            @if (ViewBag.type == 3)
            {
                <div class="col-sm-2">
                    <a href="@Url.Action("Index", "DewaltProduct")" class="btn btn-danger btn-block">Cancel</a>
                </div>
            }
            
          </div>

}
