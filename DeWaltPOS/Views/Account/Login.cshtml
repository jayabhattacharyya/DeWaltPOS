@model DeWaltPOS.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{ 
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-5 col-sm-offset-2">
        <div class="panel panel-primary log-in-form" style="margin-top:80px;width:600px">
            <div class="panel-heading">
                <h3 class="panel-title">Log in</h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div id="form-group-username" class="form-group">
                        <label for="login-username" class="col-sm-4 control-label">Username</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)                        
                        </div>
                    </div>
                    <div id="form-group-password" class="form-group">
                        <label for="login-password" class="col-sm-4 control-label">Password</label>
                        <div class="col-sm-8">
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div id="form-group-password" class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8 checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <span>Remember me</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <button class="btn btn-block btn-primary col-sm-offset-9" style="float:right">Log in</button>
                </div>
            </div>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
